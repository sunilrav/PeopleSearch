@using PeopleSearch.Models.ViewModels
@model SearchViewModel
@{
    ViewBag.Title = "People Search";
}

@section Scripts {
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.5/angular.min.js"></script>
    <script src="~/Scripts/searchController.js"></script>
}
<div ng-app="searchApp">
    <div ng-controller="searchController">

        <h2>@ViewBag.Title</h2>
        
        <div class="row">
            <div class="col-md-8">
                <form name="searchForm" class="form-horizontal">
                    <div class="form-group">
                        <div class="col-md-10">
                            <input type="search" placeholder="Name to find" class="form-control" ng-model="inputName" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            <input type="submit" value="Search" class="btn btn-default" ng-click="searchName(inputName)" />
                        </div>
                    </div>        
                </form>
            </div>
        </div>

        <div class="row">
            {{ error }}
        </div>
        <div class="row" ng-repeat="result in results">
            <div class="col-md-8">
                {{ result.FirstName }} {{ result.LastName }}
            </div>
        </div>

    </div>
</div>
